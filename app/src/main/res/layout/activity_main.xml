<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@android:color/holo_orange_dark"
        android:ellipsize="start"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:gravity="end"
        android:textColor="@android:color/holo_orange_dark"
        android:ellipsize="end"
        android:textSize="40sp"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/ac"
                android:text="AC"
                />
            <TextView
                style="@style/NumberButton"
                android:text="("
                android:id="@+id/bracket_open"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/bracket_close"
                android:text=")"
                />
            <TextView
                style="@style/NumberButton"
                android:text="/"
                android:id="@+id/divisionBut"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                style="@style/ActionButton"
                android:text="7"
                android:id="@+id/but_7"
                />
            <TextView
                style="@style/ActionButton"
                android:text="8"
                android:id="@+id/but_8"
                />
            <TextView
                style="@style/ActionButton"
                android:text="9"
                android:id="@+id/but_9"
                />
            <TextView
                style="@style/NumberButton"
                android:text="*"
                android:id="@+id/but_mult"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                style="@style/ActionButton"
                android:text="4"
                android:id="@+id/but_4"
                />
            <TextView
                style="@style/ActionButton"
                android:text="5"
                android:id="@+id/but_5"
                />
            <TextView
                style="@style/ActionButton"
                android:text="6"
                android:id="@+id/but_6"
                />
            <TextView
                style="@style/NumberButton"
                android:text="+"
                android:id="@+id/but_plus"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                style="@style/ActionButton"
                android:text="1"
                android:id="@+id/but_1"
                /><TextView
                style="@style/ActionButton"
                android:text="2"
                android:id="@+id/but_2"
            /><TextView
                style="@style/ActionButton"
                android:text="3"
                android:id="@+id/but_3"
            />
            <TextView
                style="@style/NumberButton"
                android:text="-"
                android:id="@+id/but_neg"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                style="@style/ActionButton"
                android:text="."
                android:id="@+id/but_dote"
                /><TextView
            style="@style/ActionButton"
            android:text="0"
            android:id="@+id/but_0"
            /><TextView
            style="@style/ActionButton"
            android:text="Back"
            android:id="@+id/but_back"
            />
            <TextView
                style="@style/NumberButton"
                android:text="="
                android:id="@+id/but_equal"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>